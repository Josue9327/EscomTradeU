doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title
        link(rel="stylesheet", href="css/styles.css")
        link(rel="icon", href="img/logo.ico")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        if isAuthenticated
            script(src="/socket.io/socket.io.js")
            script(src="js/chat.js")
    body
        nav.navbar.navbar-expand-sm.navbar-light#neubar
            .container-fluid
                a.navbar-brand(href='/principal')
                    img(src='img/logo3.png', height='120')
                ul.navbar-nav.ms-auto
                    li.nav-item
                        a.nav-link.mx-2(href='/' class=activePage === 'Home' ? 'active' : '') Home
                    li.nav-item
                        a.nav-link.mx-2(href='/contact' class=activePage === 'contact' ? 'active' : '') Contact
                    if isAuthenticated
                        li.nav-item
                                a.nav-link.mx-2(href='/principal' class=activePage === 'principal' ? 'active' : '') Pagina principal                       
                        li.nav-item
                                img(src='/imagen/' + img_route alt='Imagen de perfil', height='120')
                        li.nav-item
                                a.nav-link.mx-2(href='/logout' class=activePage === 'login' ? 'active' : '') Cerrar Sesion
                    else
                        li.nav-item
                            a.nav-link.mx-2(href='/login' class=activePage === 'login' ? 'active' : '') Iniciar Sesion
                        li.nav-item
                            a.nav-link.mx-2(href='/signup' class=activePage === 'Signup' ? 'active' : '') Crear una cuenta
    
