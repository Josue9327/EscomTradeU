extends layout
block content
    div.login
        h1 Login
            form(action="login", method="post")
                input.input(type="text" name="username" placeholder="Numero de boleta" required="required")
                input.input(type="password" name="password" placeholder="Password" required="required")
                button(type="submit" class="btn btn-primary btn-block btn-large") Ingresar
                if error_msg.length > 0
                    .error
                        each err in error_msg
                            p= err
